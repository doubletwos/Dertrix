@model IEnumerable<Dertrix.Models.OrgEvent>
<head>
	@{
		ViewBag.Title = "Events table";
	}
	<style>
		.btn-group:hover .dropdown-menu {
			display: block;
		}
	</style>
	<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.23/datatables.min.css" />
	<link href="~/Main/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
</head>

<div class="jumbotron" style="height:100vh;">
	<br />
	<br />
	@Html.Partial("_WidgetDashboard")

	<div>
		<hr />
		<div class="row">
			<div class="col-md-3">
				@{
					Html.RenderAction("AddOrgEvent", "OrgEvents");
				}
			</div>
			<div class="col-md-3">
			</div>
			<div class="col-md-3">
			</div>
			<div class="col-md-3">
			</div>
		</div>
	</div>
	<hr />
	<br />


	<div class="panel panel-default">



		<table id="myTable" class="table table-bordered table-condensed table-striped table-hover table-responsive ">
			<thead>

				<tr style="font-family:Trebuchet MS, Tahoma, Arial; color:#666; font-size:11px; background-color:white; border-style: groove; border-left: none; border-right:none; ">
					<th>
						Event Name
					</th>
					<th>
						Creator
					</th>
					<th>
						Description
					</th>
					<th>
						Event Date
					</th>

					<th></th>
				</tr>
			</thead>

			<tbody>

				@foreach (var item in Model)
				{
					<tr style="border-style: groove;">
						<td>
							@Html.DisplayFor(modelItem => item.EventName)
						</td>


						<td>
							@Html.DisplayFor(modelItem => item.CreatorName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.EventDescription)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.EventDate)
						</td>

						<td>
							<div class="btn-group">
								<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									Action <span class="caret"></span>
								</button>
								<ul class="dropdown-menu" style="background-color:white">
									<li><a href="#" onclick="EditOrgEvent(@item.OrgEventId)">Edit event</a></li>
									<li><a href="#" onclick="ConfirmDelete(@item.OrgEventId)">Remove event</a></li>
								</ul>
							</div>
						</td>
					</tr>
				}
			</tbody>


		</table>
		<div>
			<p>@Html.ActionLink("Back", "SysSetUp", "Home", "", new { @class = "RegUserOrgButtonColour" })</p>
		</div>

	</div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<input type="hidden" id="hiddenOrgEventId" />

@*Delete confirmation Modal*@
<div class="modal fade" id="OrgEventDeleteModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<a href="#" class="close" data-dismiss="modal">&times;</a>
				<h3 class="modal-title">Remove event</h3>
			</div>
			<div class="modal-body">
				<h3>Are you sure you want to remove this event?</h3>
			</div>
			<div class="modal-footer">
				<a href="#" class="RegUserOrgButtonColour" data-dismiss="modal">Cancel</a>
				<a href="#" class="RegUserOrgButtonColour" onclick="DeleteOrgEvent()">Confirm</a>
			</div>
		</div>
	</div>
</div>
@*Edit Org Imp Date Modal*@
<div class="modal fade" id="OrgEventEditModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<a href="#" class="close" data-dismiss="modal">&times;</a>
				<h3 class="modal-title">Edit Event</h3>
			</div>
			<div class="modal-body" id="OrgEventEditModalbody"></div>
			<div class="modal-footer">
				<input type="button" value="Cancel" class="RegUserOrgButtonColour" id="cancel" data-dismiss="modal" />
				<input type="button" value="Update" class="RegUserOrgButtonColour" id="edtSubmit" />
			</div>
		</div>
	</div>
</div>

<script>
	var ConfirmDelete = function (OrgEventId) {
		$("#hiddenOrgEventId").val(OrgEventId);
		$("#OrgEventDeleteModal").modal('show');
	}
	var DeleteOrgEvent = function () {
		var OrgImpDate = $("#hiddenOrgEventId").val();
		$.ajax({
			type: "POST",
			url: "/OrgEvents/DeleteConfirmed/",
			data: { id: OrgImpDate },
			success: function (response) {
				alert("Event deleted");
				$("#OrgEventDeleteModal").modal("hide");
				window.location.reload();
			}
		})
	}
</script>
<script>
	var EditOrgEvent = function (Id) {
		$.ajax({
			type: "GET",
			url: "/OrgEvents/EditEvent",
			data: { Id: Id },
			success: function (response) {
				$("#OrgEventEditModalbody").html(response);
				$("#OrgEventEditModal").modal("show");
			}
		})
	}
</script>
<script>
	$("#edtSubmit").click(function () {
		var data = $("#OrgEventEditForm").serialize();
		$.ajax({
			type: "POST",
			url: "/OrgEvents/Edit",
			data: data,
			success: function (response) {
				alert("Event updated");
				$("#OrgEventEditModal").modal("hide");
				$("#OrgEventEditForm")[0].reset();
				window.location.reload();
			}
		})
	})
</script>

@section scripts{
	<script type="text/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.23/datatables.min.js"></script>
	<script>
		$(document).ready(function () {
			$('#myTable').DataTable(
				{
					"ordering": false,
				}
			);
		});
	</script>
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/custom-validator")
	<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
	<link rel="stylesheet" href="https://code.jquery.com/ui/1.9.0/themes/smoothness/jquery-ui.css" />
}


