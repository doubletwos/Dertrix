@model IEnumerable<Dertrix.Models.Post>
<head>
	<link href="~/Main/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">

	@{var regUserOrgNavBar = Session["regUserOrgNavBar"].ToString(); }


	@{
		ViewBag.Title = "Posts";
	}
	<style>
		.note-btn-group.btn-group.note-style,
		.note-btn-group.btn-group.note-view,
		.note-btn-group.btn-group.note-table,
		.note-btn-group.btn-group.note-insert,
		.note-btn-group.btn-group.note-para,
		.note-btn.btn.btn-default.btn-sm.dropdown-toggle,
		.note-btn.btn.btn-default.btn-sm.note-current-color-button {
			display: none;
		}

		.nav-pills > li {
			float: left;
			border-style: double;
			border-color:  @regUserOrgNavBar;

		}


		.btn-group:hover .dropdown-menu {
			display: block;
		}
	</style>
</head>
@section scripts{
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/custom-validator")
	<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
	<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
	<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
	<script src="~/Scripts/summernote/summernote.min.js"></script>
	<script src="~/Scripts/summernote/summernote-bs4.js"></script>
	<script src="~/Scripts/summernote/summernote.js"></script>
}
<br />
<div class="jumbotron" style="height:100vh;">

	<div class="container">
		<ul class="nav nav-pills" role="tablist">
			<li role="presentation" class="active">
				<a href="#">
					<i class="fa fa-calendar fa-2x" aria-hidden="true"></i>
					Date <span class="badge">
						@DateTime.Today.DayOfWeek.ToString() @DateTime.Today.ToShortDateString()
					</span>
				</a>
			</li>
			@if (Session["IsAdmin"] != null || Session["IsTester"] != null)
			{

				<li role="presentation" class="active">
					<a href="@Url.Action("AllStudents", "RegisteredUsers")">
						<i class="fa fa-users fa-2x" aria-hidden="true"></i>
						Registered Students <span class="badge">
							@{
								Html.RenderAction("StudentCount", "RegisteredUsers");
							}
						</span>
					</a>
				</li>
				<li role="presentation" class="active" id="AllClassCountWidget" onclick="DisplayModal2()">
					<a href="#">
						<i class="fa fa-list-ol fa-2x" aria-hidden="true"></i>
						All classes <span class="badge">
							@{
								Html.RenderAction("AllClassCount", "Class");
							}
						</span>
					</a>
				</li>
			}


			<li role="presentation" class="active" id="MyClassCountWidget" onclick="DisplayModal()">
				<a href="#">
					<i class="fa fa-list-ol fa-2x" aria-hidden="true"></i>
					My classes <span class="badge">
						@{
							Html.RenderAction("MyClassCount", "Class");
						}
					</span>
				</a>
			</li>
			<li role="presentation" class="active" id="MySubjectCountWidget" onclick="DisplayModal1()">
				<a href="#">
					<i class="fa fa-book fa-2x" aria-hidden="true"></i>
					My Subjects <span class="badge">
						@{
							Html.RenderAction("MySubjectsCount", "Subjects");
						}
					</span>
				</a>
			</li>

		</ul>

		@*<div id="MyClassCountWidget" style="display:none;">
				@{
					Html.RenderAction("MyClassList", "Class");
				}
			</div>*@

	</div>



	<br />
	<br />








	<div class="panel panel-default">
		<table class="table table-bordered table-condensed  table-responsive" style="background-color:white;">
			@foreach (var item in Model)
			{
				<tr>
					<td>
						<div style="background-color:darkgray; width:auto; background-color:darkgray;">
							<strong>
								&nbsp;&nbsp;
								<u>@Html.DisplayFor(modelItem => item.PostTopic.PostTopicName)</u> &nbsp;&nbsp;&nbsp;
								@Html.DisplayFor(modelItem => item.PostSubject)

								<br />
							</strong>
							&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.CreatorFullName) &nbsp;&nbsp;&nbsp; Created: <i>@Html.DisplayFor(modelItem => item.PostCreationDate)</i>
							<hr />


						</div>
						<div style="background-color:white;">
							@Html.Raw(HttpUtility.HtmlDecode(item.PostContent))
						</div>
					</td>
					<td>
						<div class="btn-group">
							<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								Action <span class="caret"></span>
							</button>
							<ul class="dropdown-menu" style="background-color:white">
								<li><a href="#" onclick="EditPost(@item.PostId)">Edit post</a></li>
								<li><a href="#" onclick="ConfirmDelete(@item.PostId)">Delete post</a></li>
								<li><a href="#" onclick="ConfirmDelete(@item.PostId)">Download post</a></li>
							</ul>
						</div>
					</td>
				</tr>
			}
		</table>
	</div>

	<script src="~/Scripts/jquery-3.4.1.min.js"></script>
	<input type="hidden" id="hiddenPostId" />

	@*Delete confirmation Modal*@
	<div class="modal fade" id="PostDeleteModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<a href="#" class="close" data-dismiss="modal">&times;</a>
					<h3 class="modal-title">Delete post</h3>
				</div>
				<div class="modal-body">
					<h3>Are you sure you want to delete this post?</h3>
				</div>
				<div class="modal-footer">
					<a href="#" class="RegUserOrgButtonColour" data-dismiss="modal">Cancel</a>
					<a href="#" class="RegUserOrgButtonColour" onclick="DeletePost()">Confirm</a>
				</div>
			</div>
		</div>
	</div>

	@*Edit post  Modal*@
	<div class="modal fade" id="OrgpostEditModal1">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<a href="#" class="close" data-dismiss="modal">&times;</a>
					<h3 class="modal-title">Edit post</h3>
				</div>
				<div class="modal-body" id="postEditBody"></div>
				<div class="modal-footer">
					<input type="button" value="Cancel" class="RegUserOrgButtonColour" id="cancel" data-dismiss="modal" />
					<input type="button" value="Update" class="RegUserOrgButtonColour" id="edtSubmit" />
				</div>
			</div>
		</div>
	</div>


	@*Display MyclassList modal*@
	<div class="modal fade" id="ClasslistModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<a href="#" class="close" data-dismiss="modal">&times;</a>
					<h3 class="modal-title">Select Class</h3>
				</div>
				<div class="modal-body" id="ClassListModalbody"></div>
				<div class="modal-footer">
					<input type="button" value="Cancel" class="RegUserOrgButtonColour" id="cancel" data-dismiss="modal" />
				</div>
			</div>
		</div>
	</div>


	<div class="modal fade" id="SubjectslistModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<a href="#" class="close" data-dismiss="modal">&times;</a>
					<h3 class="modal-title">Subject list</h3>
				</div>
				<div class="modal-body" id="SubjectsListModalbody"></div>
				<div class="modal-footer">
					<input type="button" value="Cancel" class="RegUserOrgButtonColour" id="cancel" data-dismiss="modal" />
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="AllClasslistModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<a href="#" class="close" data-dismiss="modal">&times;</a>
					<h3 class="modal-title">All class list</h3>
				</div>
				<div class="modal-body" id="AllClassListModalbody"></div>
				<div class="modal-footer">
					<input type="button" value="Cancel" class="RegUserOrgButtonColour" id="cancel" data-dismiss="modal" />
				</div>
			</div>
		</div>
	</div>



</div>



<script>
	var DisplayModal = function (Id) {
		$.ajax({
			type: "GET",
			url: "/Class/MyClassList",
			data: { Id: Id },
			success: function (response) {
				$("#ClassListModalbody").html(response);
				$("#ClasslistModal").modal("show");
			}
		})
	}
</script>

<script>
	var DisplayModal1 = function (Id) {
		$.ajax({
			type: "GET",
			url: "/Subjects/MySubjectsList",
			data: { Id: Id },
			success: function (response) {
				$("#SubjectsListModalbody").html(response);
				$("#SubjectslistModal").modal("show");
			}
		})
	}
</script>

<script>
	var DisplayModal2 = function (Id) {
		$.ajax({
			type: "GET",
			url: "/Class/AllClassList",
			data: { Id: Id },
			success: function (response) {
				$("#AllClassListModalbody").html(response);
				$("#AllClasslistModal").modal("show");
			}
		})
	}
</script>




<script>
	var ConfirmDelete = function (PostId) {
		$("#hiddenPostId").val(PostId);
		$("#PostDeleteModal").modal('show');
	}
	var DeletePost = function () {
		var OrgId = $("#hiddenPostId").val();
		$.ajax({
			type: "POST",
		    url:  '@Url.Action("DeleteConfirmed", "Posts")',
			data: { id: OrgId },
			success: function (response) {
				alert("Post deleted");
				$("#PostDeleteModal").modal("hide");
				window.location.reload();
			}
		})
	}
</script>

<script>
	var EditPost = function (Id) {
		$.ajax({
			type: "GET",
			url: "/Posts/EditPost",
			data: { Id: Id },
			success: function (response) {
				$("#postEditBody").html(response);
				$("#OrgpostEditModal1").modal("show");
				$("#OrgpostEditModal1").on('shown.bs.modal', function () {
					$('#PostContent').summernote({
						height: '300px',
						dialogsInBody: true,
					});
				})
			}
		})
	}
	$(function () {
		$("#cancel").on("click", function () {
		})
	})
</script>
<script>
	$("#edtSubmit").click(function () {
		var data = $("#PostEditForm").serialize();
		$.ajax({
			type: "POST",
			url:  '@Url.Action("Edit", "Posts")',
			data: data,
			success: function (response) {
				alert("Post Updated");
				$("#OrgpostEditModal1").modal("hide");
				$("#PostEditForm")[0].reset();
				window.location.reload();
			}
		})
	})
</script>
