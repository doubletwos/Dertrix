@model IEnumerable<Zeus.Models.Post>


@{
	ViewBag.Title = "Index";
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/summernote/summernote.min.js"></script>


<div>
	<div>

		@{
			Html.RenderAction("CreatePost", "Posts");
		}
	</div>


</div>




<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Org.OrgName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PostTopic.PostTopicName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PostSubject)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PostCreatorId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CreatorFullName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PostCreationDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PostExpirtyDate)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Org.OrgName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PostTopic.PostTopicName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PostSubject)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PostCreatorId)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CreatorFullName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PostCreationDate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PostExpirtyDate)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.PostId }) |
				@Html.ActionLink("Details", "Details", new { id = item.PostId }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.PostId })
			</td>
		</tr>
	}

</table>


















