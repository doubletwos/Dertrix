@model IEnumerable<Dertrix.Models.RegisteredUsersGroups>


<table class="table table-bordered table-responsive table-condensed table-hover">
	<tr style="font-family:Trebuchet MS, Tahoma, Arial; color:#666; font-size:11px; background-color:white; border-style: groove; border-left: none; border-right:none; ">
		<th>
			@Html.DisplayNameFor(model => model.OrgGroup.GroupName)
		</th>

	</tr>

	@if (Model.Count() == 0)
	{
		<tr>
			<td>
				<i>This staff does not belong to any group</i>
			</td>

		</tr>
	}

	else {

	foreach (var item in Model.OrderBy(i => i.OrgGroup.GroupName))
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.OrgGroup.GroupName)
			</td>

		</tr>
		}
	}
</table>
