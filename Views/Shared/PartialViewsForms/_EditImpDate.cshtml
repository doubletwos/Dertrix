@model Dertrix.Models.OrgImportantDate


<form id="OrgImpDateEditForm">

	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.OrgImportantDateId)
		@Html.HiddenFor(model => model.OrgId)
		@Html.HiddenFor(model => model.CreatedBy)
		@Html.HiddenFor(model => model.CreatorName)




		<div class="form-group">
			@Html.LabelFor(model => model.ImportantDateName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.ImportantDateName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.ImportantDateName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.ImportanttDate, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.ImportanttDate, "{0:d MMM yyyy}", new { htmlAttributes = new { @class = "form-control datepicker", type = "text" } })
				@Html.ValidationMessageFor(model => model.ImportanttDate, "", new { @class = "text-danger" })
			</div>
		</div>




	</div>

</form>



<script>
	$(document).ready(function () {
	

		$(function () {
			$(".datepicker").datepicker({
				dateFormat: "dd-mm-yy",
				changeMonth: true,
				changeYear: true,
				yearRange: "-35:+35",
			});
		})

	})
</script>




