@model Dertrix.Models.Org
<form id="myFormm">
	@Html.AntiForgeryToken()
	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.OrgId)
		@Html.HiddenFor(model => model.OrgTypeId)
		@Html.HiddenFor(model => model.CreationDate)
		@Html.HiddenFor(model => model.CreatedBy)



		<div class="form-group">
			@Html.LabelFor(model => model.OrgName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.OrgName,"Name", new { htmlAttributes = new { @class = "form-control " } })
				@Html.ValidationMessageFor(model => model.OrgName, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.OrgAddress,"Address" ,htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.OrgAddress, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.OrgAddress, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.DomainId, "Domain", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("DomainId", null, "", htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.DomainId, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.OrgBrandId, "Org Brand", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("OrgBrandId", null, "", htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.OrgBrandId, "", new { @class = "text-danger" })
			</div>
		</div>

	</div>
</form>