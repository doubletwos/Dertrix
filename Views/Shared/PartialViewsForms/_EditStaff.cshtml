@model Dertrix.Models.RegisteredUserOrganisation
<form id="StaffEditForm">
	@Html.AntiForgeryToken()
	<div class="form-horizontal">
		<h4>RegisteredUser</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.RegisteredUserOrganisationId)
		@Html.HiddenFor(model => model.RegisteredUserId)
		@Html.HiddenFor(model => model.OrgId)
		@Html.HiddenFor(model => model.OrgName)
		@Html.HiddenFor(model => model.RegUserOrgBrand)
		@Html.HiddenFor(model => model.IsTester)
		@Html.HiddenFor(model => model.RegisteredUserTypeId)
		@Html.HiddenFor(model => model.EnrolmentDate)
		@Html.HiddenFor(model => model.CreatedBy)
		@Html.HiddenFor(model => model.FullName)
		@Html.HiddenFor(model => model.LastLogOn)

		<div class="form-group">
			@Html.LabelFor(model => model.TitleId, "Title", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("TitleId", null, "Please Select", new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.TitleId, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control " } })
				@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
			</div>
		</div>
		@{
			if ((int)Session["OrgType"] == 3 || (int)Session["OrgType"] == 5)
			{
				<div class="form-group">
					@Html.LabelFor(model => model.PrimarySchoolUserRoleId, "Role", htmlAttributes: new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.DropDownList("PrimarySchoolUserRoleId", null, "", new { @id = "PrimarySchoolUserRoleId", @class = "form-control" })
						@Html.ValidationMessageFor(model => model.PrimarySchoolUserRoleId, "", new { @class = "text-danger" })
					</div>
				</div>
			}
		}
		@{
			if ((int)Session["OrgType"] == 2 || (int)Session["OrgType"] == 5)
			{
				<div class="form-group">
					@Html.LabelFor(model => model.SecondarySchoolUserRoleId, "Role", htmlAttributes: new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.DropDownList("SecondarySchoolUserRoleId", null, "", new { @id = "SecondarySchoolUserRoleId", @class = "form-control" })
						@Html.ValidationMessageFor(model => model.SecondarySchoolUserRoleId, "", new { @class = "text-danger" })
					</div>
				</div>
			}
		}

	</div>
</form>